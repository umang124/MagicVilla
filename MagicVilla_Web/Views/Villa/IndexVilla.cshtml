@using MagicVilla_VillaAPI.Models;
@model List<Villa>

<div class="container p-4 border">

    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateVilla" asp-controller="Villa" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Villa</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@(item.Rate.ToString("c"))</td>
                    <td>
                        <a asp-action="UpdateVilla" asp-route-villaId="@item.Id" asp-controller="Villa" class="btn btn-outline-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="DeleteVilla" asp-route-villaId="@item.Id" asp-controller="Villa" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

